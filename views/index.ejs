<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Playlist</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Music Playlist</h1>
    <a href="/add">Add New Song</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Filename</th>
                <th>Play</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% songs.forEach(song => { %>
                <tr>
                    <td><%= song.id %></td>
                    <td><%= song.title %></td>
                    <td><%= song.artist %></td>
                    <td><%= song.filename %></td>
                    <td>
                        <audio controls>
                            <source src="/audio/<%= song.filename %>" type="audio/mpeg">
                            Your browser does not support the audio tag.
                        </audio>
                    </td>
                    <td>
                        <form action="/delete/<%= song.id %>" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a href="/edit/<%= song.id %>">Edit</a> <!-- Updated edit link -->
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
